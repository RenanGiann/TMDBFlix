<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/redDark">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loadingAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewAction"
        app:layout_constraintEnd_toEndOf="@+id/recyclerViewAction"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewAction"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewAction" />


</androidx.constraintlayout.widget.ConstraintLayout>